<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitatReStoreMobile.Pages.DonationHomePage"
             Title="Donate">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Donate!"/>
            <Label Text="Before donating, you must enter your information." />
            <Button x:Name="btnGoDonorForm" Text="New Donor" Clicked="btnGoDonorForm_Clicked"/>
            <Button x:Name="btnReturningDonor" Text="Returning Donor" Clicked="btnGoReturningDonorForm_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>