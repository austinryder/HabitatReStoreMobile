<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitatReStoreMobile.Pages.DriverLoginPage"
             Title="Pickup Driver Login">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="entDriverID" Placeholder="Driver ID" Keyboard="Numeric" />
            <Label x:Name="lblVID" StyleClass="Validation"/>
            <Entry x:Name="entEmail" Placeholder="Email Address" />
            <Label x:Name="lblVEmail" StyleClass="Validation"/>
            <Button x:Name="btnSubmit" Text="Submit" Clicked="btnSubmit_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>