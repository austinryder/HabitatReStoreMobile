<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitatReStoreMobile.Pages.DonationPickupFormPage"
             xmlns:vm="clr-namespace:HabitatReStoreMobile.ViewModels"
             Title="Donation Pickup Form">
    <ContentPage.BindingContext>
        <vm:DonationPickupFormViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="imgDonationPhoto" HorizontalOptions="Center" WidthRequest="320" HeightRequest="240"/>
            <Button x:Name="btnAddPhoto" Text="Add Picture" Command="{Binding AddPictureCommand}"/>
            <Button Text="Submit" Command="{Binding SubmitCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>